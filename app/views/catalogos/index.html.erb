   <div class="title"><span class="title_icon"><img src="/assets/bullet1.gif" alt="" title="" /></span>Catálogos</div>
<script>
$(document).ready(function(){
	$('#menu_buscarProduto').removeClass('selected');
	$('#menu_newProduto').removeClass('selected');
	$('#menu_produtos').removeClass('selected');
	$('#menu_newRevista').removeClass('selected');
	$('#menu_revistas').removeClass('selected');
	$('#menu_revistas').addClass('selected');

 });
 
  function confirmaDelete(){
	if(!confirm("Deseja remover esse catálogo?")){
		var e = window.event;
		e.cancelBubble = true;
		e.returnValue = false;

		if (e.stopPropagation) {
            e.stopPropagation();
            e.preventDefault();
			}
		}
	}

</script>
<div style="margin-left: 49px;color:green;font-family: calibri;font-size:12pt;">
<% flash.each do |name, msg| %>
   <b>   <%= content_tag :div, msg, :id => "flash_#{name}" %> </b>
	  <% end %>
</div>

<div style="margin-left: auto; margin-right:auto;">   
<br/>
<br/>
<br/>
<br/>
<div align="right"> 

<%= link_to 'Adicionar Catálogo', new_catalogo_path, :style => "width:150px;", :class => " adicionar big negative button" %>

    </div>

<table align="center">

  <tr>
     <th style="width:150px">Marca</th>
    <th style="width:150px">Nome</th>
    <th style="width:150px">Data início</th>
    <th style="width:150px">Data fim</th>
    <th style="width:150px">Ações</th>
    
  </tr>

<% @catalogos.each do |catalogo| %>
  <tr>
    <td><%= catalogo.marca %></td>
    <td><%= catalogo.nome %></td>
    <td><%= catalogo.data_inicio.strftime("%d/%m/%Y") %></td>
    <td><%= catalogo.data_fim.strftime("%d/%m/%Y") %></td>
    <td>
	<%= link_to (image_tag "buttons/button_remove.png", :size => "20x20", :style => "margin-right:10px;" ) ,{:controller => 'catalogos', :action => 'destroy_catalogo', :id => catalogo.id},  :onclick => "confirmaDelete();"%>
	<%= link_to (image_tag "buttons/button_edit.png", :size => "20x20", :style => "margin-right:10px;" ) ,{:controller => 'catalogos', :action => 'edit', :id => catalogo.id}%>
	<%= link_to (image_tag "buttons/glass.png",:size => "20x20" ) ,{:controller => 'catalogos',:action => 'show', :id => catalogo.id}%>
  </tr>
<% end %>
</table>

<br />


</div>

