  function confirmaDelete(){
	if(!confirm("Deseja remover esse produto?")){
		var e = window.event;
		e.cancelBubble = true;
		e.returnValue = false;

		if (e.stopPropagation) {
            e.stopPropagation();
            e.preventDefault();
			}
		}
	}
 
 
</script>
